@model LocalVibes.Models.MemberCardModel

<head>
    <link rel="stylesheet" href="~/css/Views/Shared/MemberCard.css" />
</head>
<table class="MemberCard">
        <tr>
            <th>Foto</th>
            <th>Nombre</th>
            <th>Instrumento</th>
        </tr>
        @if (Model.Members != null && Model.Members.Any())
        {
            @foreach (var member in Model.Members)
            {
                <tr >
                    <!-- Image -->
                    <td>
                        @if (member.MemberImage == null)
                        {
                            <img src="~/Assets/defaul.jpeg" />
                        }
                        else
                        {
                            <img src="data:image/png;base64 Convert.ToBase64String(member.MemberImage)" alt="@member.MemberName" />
                        }
                        
                    </td>

                    <!-- Member Name -->
                    <td>
                        <p>@member.MemberName</p>
                    </td>
                    <!-- Instruments -->
                    <td>
                        <p>
                            @if (member.Instruments != null && member.Instruments.Any())
                            {
                                @string.Join(", ", member.Instruments.Select(i => i.NameInstrument))
                            }
                            else
                            {
                                <span>Datos no encontrado</span>
                            }
                        </p>
                    </td>

                </tr>
            }
        }
        else
        {
        <tr>
            <td>
                <span>Datos no encontrado</span>
            </td>
        </tr>
        }
</table>
