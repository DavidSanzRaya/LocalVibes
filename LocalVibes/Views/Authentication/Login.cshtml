@using LocalVibes.Models.ViewModels
@model LoginViewModel

@{
	ViewData["Title"] = "Login";
}

<head>
	@Html.Partial("_Font")
	<link rel="stylesheet" href="~/css/Views/Authentication/Login.css" />
</head>

<div class="Login">
	<div class="Login__left-section">
		<video autoplay muted loop id="Login__background__video">
			<source src="~/Assets/IMG_0059.mov" type="video/mp4">
		</video>
		<div class="Login__background__shadow">
		</div>
	</div>
	<div class="Login__right-section">
		<div class="wrapper">
			<h1>Inicia sesión</h1>
			<form class="Login__form" asp-action="Login" method="post" asp-antiforgery="true">

				<div class="form-group">
					<input asp-for="Username"/>
					<label asp-for="Username"></label>
					<span asp-validation-for="Username" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input asp-for="Password"/>
					<label asp-for="Password"></label>
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<app-button button-text="Entrar" button-type="secondary"></app-button>

			</form>
			<div asp-validation-summary="All" class="text-danger"></div>
		</div>
	</div>
</div>

