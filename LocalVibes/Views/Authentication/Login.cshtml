@using LocalVibes.Models.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-container">
    <div class="login-title">
        <h2>Login</h2>
    </div>

    <form asp-action="Login" method="post" asp-antiforgery="true">
        <!-- Campo para el Nombre de Usuario -->
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <!-- Campo para el Email -->
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Campo para la Contraseña -->
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Checkbox para verificar si es una Banda -->
        <div class="form-group">
            <div class="form-check">
                <input asp-for="IsABand" type="checkbox" class="form-check-input" id="IsBand" />
                <label class="form-check-label" for="IsBand">Soy una banda</label>
            </div>
        </div>

        <!-- Resumen de validación -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Botón de Enviar -->
        <button type="submit" class="btn btn-primary">Login</button>

        <!-- Botones para Redirigir a Registro -->
        <div class="mt-3 text-center">
            <p>
                ¿No tienes cuenta?
                <a asp-controller="Authentication" asp-action="SignUpUser" class="btn btn-secondary ml-2">Registrarse como usuario nuevo</a>
                <a asp-controller="Authentication" asp-action="SignUpProject" class="btn btn-secondary ml-2">Registrarse como artista o banda nueva</a>
            </p>
        </div>
    </form>
</div>
