@using LocalVibes.Models.ViewModels
@model SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<head>
    <link rel="stylesheet" href="~/css/multiSelect.css" />
    <link rel="stylesheet" href="~/css/Views/SignUp/style.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    
</head>

<div class="body">
    <div class="wrapper">
        <span class="bg-animate"></span>
        <span class="bg-animate2"></span>

        <div class="form-box login">
            <h2 class="animation" style="--i:0; --j:22">User</h2>
            <partial name="SignUp/_UserForm" model="Model.User" />
        </div>
        <div class="info-text login">
            <h2 class="animation" style="--i:0; --j:20">Welcome!</h2>
            <p class="animation" style="--i:1; --j:21">Enjoy the music around you and discover new bands</p>
        </div>
        <!--Band-->
        <div class="form-box register">
            <h2 class="animation" style="--i:24; --j:0">Band</h2>
            <partial name="SignUp/_BandForm" model="Model.Band" />
        </div>
        <div class="info-text register">
            <h2 class="animation" style="--i:24; --j:0">Welcome!</h2>
            <p class="animation" style="--i:25; --j:1">Enjoy the music around you and discover new bands</p>
        </div>
    </div>
    <script src="~/js/SignUp/script.js"></script>
</div>
